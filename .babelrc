{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [".ts", ".tsx", ".json"],
        "root": ["./"],
        "alias": {
          "@pages": "./src/pages",
          "@components": "./src/components",
          "@utils": "./src/utils",
          "@context": "./src/context"
        }
      }
    ],
    "babel-plugin-styled-components"
  ]
}
